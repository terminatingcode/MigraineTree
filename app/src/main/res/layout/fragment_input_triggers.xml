<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".InputTriggersFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="?android:attr/actionBarSize">

<RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/black">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_date_dd_mm_yyyy_hh_mm"
        android:id="@+id/start_date_button"
        android:clickable="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/set_button"
        android:layout_toEndOf="@+id/start_date_button"
        android:layout_toRightOf="@+id/start_date_button"
        android:clickable="true"
        android:src="@android:drawable/ic_input_add"
        android:visibility="gone"
        android:contentDescription="@string/set_date_time"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/painTextView"
        android:text="@string/pain_at_beginning_of_migraine"
        android:layout_below="@+id/start_date_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:clickable="false"
        android:enabled="false"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        android:id="@+id/painLevelTextView"
        android:textColor="#ffffff"
        android:clickable="true"
        android:textSize="24sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_below="@+id/start_date_button"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:id="@+id/painSeekBar"
        android:layout_below="@+id/painTextView"
        android:progress="0"
        android:max="10"
        android:background="#494949"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/are_you_experiencing_aura"
        android:id="@+id/auraCheckBox"
        android:textColor="#ffffff"
        android:clickable="true"
        android:textSize="24sp"
        android:layout_below="@+id/painSeekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:buttonTint="#ffffff"
        tools:targetApi="lollipop"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/have_you_eaten_in_the_last_3_hours"
        android:id="@+id/eatenCheckBox"
        android:textColor="#ffffff"
        android:clickable="true"
        android:textSize="24sp"
        android:layout_below="@+id/auraCheckBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:buttonTint="#ffffff"
        tools:targetApi="lollipop"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/have_you_had_a_glass_of_water_in_the_last_3_hours"
        android:id="@+id/waterCheckBox"
        android:textColor="#ffffff"
        android:clickable="true"
        android:textSize="24sp"
        android:layout_below="@+id/eatenCheckBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:buttonTint="#ffffff"
        tools:targetApi="lollipop"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hours_of_quality_sleep"
        android:id="@+id/sleepTextView"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:layout_below="@+id/waterCheckBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        android:id="@+id/sleepLevelTextView"
        android:textColor="#ffffff"
        android:clickable="true"
        android:textSize="24sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_below="@+id/waterCheckBox"/>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:id="@+id/sleepSeekBar"
        android:layout_below="@+id/sleepTextView"
        android:progress="0"
        android:max="24"
        android:background="#494949"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stress_levels"
        android:id="@+id/stressTextView"
        android:textColor="#ffffff"
        android:clickable="true"
        android:textSize="24sp"
        android:layout_below="@+id/sleepSeekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        android:id="@+id/stressLevelTextView"
        android:textColor="#ffffff"
        android:clickable="true"
        android:textSize="24sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_below="@+id/sleepSeekBar"/>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:id="@+id/stressSeekBar"
        android:layout_below="@+id/stressTextView"
        android:progress="0"
        android:max="10"
        android:background="#494949"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/amount_of_eye_strain"
        android:id="@+id/eyesTextView"
        android:textColor="#ffffff"
        android:clickable="true"
        android:textSize="24sp"
        android:layout_below="@+id/stressSeekBar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        android:id="@+id/eyesLevelTextView"
        android:textColor="#ffffff"
        android:clickable="true"
        android:textSize="24sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_below="@+id/stressSeekBar"/>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:id="@+id/eyesSeekBar"
        android:layout_below="@+id/eyesTextView"
        android:progress="0"
        android:max="10"
        android:background="#494949"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/city_not_set"
        android:id="@+id/locationTextView"
        android:textColor="#ffffff"
        android:clickable="true"
        android:textSize="24sp"
        android:layout_below="@+id/eyesSeekBar"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_new_location"
        android:id="@+id/newLocationButton"
        android:layout_below="@+id/eyesSeekBar"
        android:textSize="12sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/type_of_pain"
        android:id="@+id/typeOfPainTextView"
        android:textColor="#ffffff"
        android:clickable="true"
        android:textSize="24sp"
        android:layout_below="@+id/newLocationButton"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/typeOfPainSpinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/typeOfPainTextView"
        android:theme="@android:style/ThemeOverlay.Material.Dark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/source_of_pain"
        android:id="@+id/areaOfPainTextView"
        android:textColor="#ffffff"
        android:clickable="true"
        android:textSize="24sp"
        android:layout_below="@+id/typeOfPainSpinner"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/areasOfPainSpinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/areaOfPainTextView"
        android:theme="@android:style/ThemeOverlay.Material.Dark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/meds_taken"
        android:id="@+id/typeOfMedsTextView"
        android:textColor="#ffffff"
        android:clickable="true"
        android:textSize="24sp"
        android:layout_below="@+id/areasOfPainSpinner"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/typeOfMedsSpinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/typeOfMedsTextView"
        android:theme="@android:style/ThemeOverlay.Material.Dark"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/symptoms"
        android:id="@+id/symptomsTextView"
        android:textColor="#ffffff"
        android:clickable="true"
        android:textSize="24sp"
        android:layout_below="@+id/typeOfMedsSpinner"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nauseous"
        android:id="@+id/nauseaCheckBox"
        android:textColor="#ffffff"
        android:clickable="true"
        android:textSize="24sp"
        android:layout_below="@+id/symptomsTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:buttonTint="#ffffff"
        tools:targetApi="lollipop"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sensitivity_to_light"
        android:id="@+id/sensitivityLightCheckBox"
        android:textColor="#ffffff"
        android:clickable="true"
        android:textSize="24sp"
        android:layout_below="@+id/nauseaCheckBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:buttonTint="#ffffff"
        tools:targetApi="lollipop"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sensitivity_noise"
        android:id="@+id/sensitivityNoiseCheckBox"
        android:textColor="#ffffff"
        android:clickable="true"
        android:textSize="24sp"
        android:layout_below="@+id/sensitivityLightCheckBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:buttonTint="#ffffff"
        tools:targetApi="lollipop"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sensitivity_to_smell"
        android:id="@+id/sensitivitySmellCheckBox"
        android:textColor="#ffffff"
        android:clickable="true"
        android:textSize="24sp"
        android:layout_below="@+id/sensitivityNoiseCheckBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:buttonTint="#ffffff"
        tools:targetApi="lollipop"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nasal_congestion"
        android:id="@+id/nasalCongestionCheckBox"
        android:textColor="#ffffff"
        android:clickable="true"
        android:textSize="24sp"
        android:layout_below="@+id/sensitivitySmellCheckBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:buttonTint="#ffffff"
        tools:targetApi="lollipop"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ringing_or_popped_ears"
        android:id="@+id/earsCheckBox"
        android:textColor="#ffffff"
        android:clickable="true"
        android:textSize="24sp"
        android:layout_below="@+id/nasalCongestionCheckBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:buttonTint="#ffffff"
        tools:targetApi="lollipop"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confusion"
        android:id="@+id/confusionCheckBox"
        android:textColor="#ffffff"
        android:clickable="true"
        android:textSize="24sp"
        android:layout_below="@+id/earsCheckBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:buttonTint="#ffffff"
        tools:targetApi="lollipop"/>


    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:layout_below="@+id/start_date_button"
        android:visibility="gone"
        android:clickable="true"
        android:background="#303030"
        android:theme="@android:style/ThemeOverlay.Material.Dark"/>

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:layout_below="@+id/start_date_button"
        android:visibility="gone"
        android:clickable="true"
        android:background="#303030"/>



</RelativeLayout>
</ScrollView>
