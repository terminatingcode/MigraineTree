<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Weather.WeatherFragment">

    <RelativeLayout
        android:id="@+id/weather_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="100*C\n100*F"
            android:id="@+id/temperature"
            android:layout_marginTop="32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:textSize="96sp"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="100%"
            android:textColor="@android:color/white"
            android:textSize="64sp"
            android:id="@+id/Humidity"
            android:layout_below="@+id/temperature"
            android:layout_alignLeft="@+id/temperature"
            android:layout_alignStart="@+id/temperature"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1000.0hPa"
            android:textColor="@android:color/white"
            android:textSize="64sp"
            android:id="@+id/AirPressure"
            android:layout_below="@+id/Humidity"
            android:layout_alignLeft="@+id/Humidity"
            android:layout_alignStart="@+id/Humidity"/>
    </RelativeLayout>


</FrameLayout>
