<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/colorPrimary"
              android:orientation="vertical"
             tools:context=".controller.ChartsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:stretchColumns="*"
            android:background="@android:drawable/gallery_thumb"
            android:showDividers="middle"
            android:divider="@drawable/abc_seekbar_track_material">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/average_migraine"
                android:textColor="@color/textColor"
                android:textSize="24sp"/>

        </TableLayout>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/averagePainchart"
            android:layout_width="match_parent"
            android:layout_height="280dp" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/triggersBarChart"
            android:layout_width="match_parent"
            android:layout_height="280dp" />


        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/symptomsBarChart"
            android:layout_width="match_parent"
            android:layout_height="280dp" />
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/averageTimeOfDayChart"
            android:layout_width="match_parent"
            android:layout_height="280dp" />

    </LinearLayout>

</ScrollView>
